use strict;
use esmith::Build::CreateLinks qw(:all);

#
# nethserver-remi-php81-php-fpm event
#

event_actions('nethserver-remi-php81-php-fpm-update', qw(
    initialize-default-databases        00
));

event_templates("nethserver-remi-php81-php-fpm-update", qw(
  /etc/opt/remi/php81/php-fpm.d/z_nethserver.conf
  /etc/nethserver/eorepo.conf
));

event_services("nethserver-remi-php81-php-fpm-update", qw(
  php81-php-fpm restart
));
